u003e count_one :\n","    predict = 0  \n","  elif count_one \u003ecount_zero :\n","    predict = 1 \n","  else :  \n","    predict= random.randint(0,1)\n","    return predict\n","\n","# Declare the 'update_scores()' function here.\n","def update_scores(predicted, player_input):\n","  global player_score , computer_score\n","  if predicted == player_input:\n","    computer_score =computer_score + 1\n","    print(\"computer score\",computer_score)\n","    print(\"player_score\",player_score)\n","  else:\n","    player_score =player_score + 1\n","    print(\"computer score\",computer_score)\n","    print(\"player_score\",player_score)\n","  \n","\n","# Declare the 'gameplay()' function here.\n","\n","def gameplay():\n","    # Convert the player_input value to an integer.\n","  valid_entries = ['0','1']\n","  while True:\n","    predicted = prediction() \n","    player_input = input(\"Enter either 0 or 1 \")    \n","    # Add the current player input  the 'player_inputs_list'.\n","    while player_input not in valid_entries :\n","      print(\"invalid input\")\n","      player_input = input(\"Enter either 0 or 1 again \")   \n","      \n","    player_input = int(player_input)\n","    # Update the scores using the 'update_scores()' function.\n","    player_inputs_list.append(player_input)  \n","      \n","    update_scores(predicted ,player_input)\n","      \n","    if player_score == 10 :\n","      print(\"player win \")\n","      break\n","    elif computer_score == 10:\n","      print(\"bad luck you lost\")\n","      break\n","gameplay()\n","# Call the 'gameplay()' function here.\n"]},{"cell_type":"markdown","metadata":{"id":"E_xx932hSYn9"},"source":["At the end of the game, if you want to look at the player inputs, then you can print the `player_inputs_list`:"]},{"cell_type":"code","execution_count":null,"metadata":{"id":"fTclQOhWSYMs"},"outputs":[],"source":["# S5.2: Print the 'player_inputs_list'.\n"]},{"cell_type":"markdown","metadata":{"id":"7N6-lK2UDf2j"},"sour